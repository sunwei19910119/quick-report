<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xhtt.modules.eventType.dao.EventTypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.xhtt.modules.eventType.entity.EventTypeEntity" id="eventTypeMap">
        <result property="id" column="id"/>
        <result property="level" column="level"/>
        <result property="name" column="name"/>
        <result property="parentId" column="parent_id"/>
    </resultMap>

    <select id="queryPage" resultMap="eventTypeMap">
        SELECT * from event_type where 1=1
        <if test="ps.level !=null and ps.level!=''">
            and `level` = #{ps.level}
        </if>
        <if test="ps.parent_id !=null and ps.parent_id!=''">
            and `parent_id` = #{ps.parent_id}
        </if>

    </select>
</mapper>